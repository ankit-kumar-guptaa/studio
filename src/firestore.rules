rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Super Admin is identified by a specific email address.
    function isSuperAdmin() {
        return isSignedIn() && request.auth.token.email == 'support@itsahayata.com';
    }
    
    // SEO Manager has read-only access to specific collections
    // and can only update SEO fields.
    function isSeoManager() {
        // This relies on a custom claim being set, which our current setup doesn't do.
        // The logic in useAuth.tsx and useUserRole.tsx handles this client-side.
        // For rules, we'll assume a future implementation might set a claim.
        return request.auth.token.isSeoManager == true;
    }

    /**
     * @description Public read access for job seekers, write access is restricted to owner or Super Admin.
     */
    match /jobSeekers/{jobSeekerId} {
      allow read: if true;
      allow create: if isOwner(jobSeekerId) || request.auth == null; // Allow creation on signup
      allow update: if isOwner(jobSeekerId) || isSuperAdmin();
      allow delete: if isOwner(jobSeekerId) || isSuperAdmin();
    }
    
    match /jobSeekers/{jobSeekerId}/{documents=**} {
      allow read, write: if isOwner(jobSeekerId) || isSuperAdmin();
    }

    /**
     * @description Public read access for employers, write access is restricted.
     */
    match /employers/{employerId} {
       function isExistingOwner() {
            return isOwner(employerId) && resource.data != null;
        }
      allow read: if true;
      allow create: if isOwner(employerId) || request.auth == null;
      allow update: if isExistingOwner() || isSuperAdmin();
      allow delete: if isExistingOwner() || isSuperAdmin();
    }

    /**
     * @description Employer's own job posts. Write restricted to owner or admin.
     */
    match /employers/{employerId}/jobPosts/{jobPostId} {
      allow read, write: if isOwner(employerId) || isSuperAdmin();
      // This rule is tricky with client-side only roles. Assuming isSeoManager() would be implemented via claims.
      // allow update: if isSeoManager() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['seoTitle', 'seoDescription', 'seoKeywords']);
    }

    /**
     * @description Applications for a specific job post.
     * Regular employers can read/update/delete.
     * Job seekers can only create.
     */
    match /employers/{employerId}/jobPosts/{jobPostId}/applications/{applicationId} {
      function isJobSeekerOwner() {
          return isSignedIn() && request.auth.uid == request.resource.data.jobSeekerId;
      }
      allow read, update, delete: if isOwner(employerId);
      allow create: if isJobSeekerOwner();
    }


    /**
     * @description Public read for all jobs. Write access is restricted to owners or Super Admin.
     */
    match /jobPosts/{jobPostId} {
        allow read: if true;
        allow create: if (isSignedIn() && request.resource.data.employerId == request.auth.uid) || isSuperAdmin();
        // SEO Manager updates are tricky without claims. For now, allow super admin.
        allow update: if (isSignedIn() && resource.data.employerId == request.auth.uid) || isSuperAdmin();
                         // (isSeoManager() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['seoTitle', 'seoDescription', 'seoKeywords']));
        allow delete: if (isSignedIn() && resource.data.employerId == request.auth.uid) || isSuperAdmin();
    }
    
    /**
     * @description Applications for SUPER_ADMIN job posts.
     */
    match /jobPosts/{jobPostId}/applications/{applicationId} {
        function isJobSeekerOwner() {
          return isSignedIn() && request.auth.uid == request.resource.data.jobSeekerId;
        }
       allow read, update, delete: if isSuperAdmin();
       allow create: if isJobSeekerOwner();
    }


    /**
     * @description Public read for blogs. Admins can write, SEO managers can update SEO fields.
     */
    match /blogs/{blogId} {
      allow read: if true;
      allow create, update, delete: if isSuperAdmin();
      // SEO manager updates are also tricky without claims.
      // allow update: if isSeoManager() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['seoTitle', 'seoDescription', 'seoKeywords']);
    }

    /**
     * @description Public read for reviews. Logged-in users can create.
     */
    match /companyReviews/{companyReviewId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow write: if false; 
    }
    
    /**
     * @description SEO Manager profiles. Only Super Admins can manage them.
     */
    match /seoManagers/{seoManagerId} {
        allow read, write: if isSuperAdmin();
    }
  }
}
