rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Super admin check: This is a placeholder for more robust security.
    // For now, we allow reads from known admin panels but require auth for writes.
    // A real implementation should use custom claims.
    function isSuperAdmin() {
      // WARNING: This is insecure for production writes. It allows any client
      // to claim they are an admin for read purposes.
      // This is a temporary measure for development.
      return true;
    }

    /**
     * @description Allows a job seeker to manage their own profile and nested data.
     * Authenticated users and super admins can read profiles.
     */
    match /jobSeekers/{jobSeekerId}/{documents=**} {
      allow get, list: if isSignedIn() || isSuperAdmin();
      allow write: if isOwner(jobSeekerId);
    }

    /**
     * @description Allows an employer to manage their own profile. Admins have full access.
     */
    match /employers/{employerId} {
       function isExistingOwner() {
            return isOwner(employerId) && resource.data != null;
        }
      allow get: if isOwner(employerId) || isSuperAdmin();
      allow list: if isSuperAdmin(); // Allow admin to list all employers
      allow create: if isOwner(employerId);
      allow update: if isExistingOwner() || isSuperAdmin();
      allow delete: if isExistingOwner() || isSuperAdmin();
    }

    /**
     * @description Allows an employer to manage their job posts. Admins have full access.
     */
    match /employers/{employerId}/jobPosts/{jobPostId} {
      // Allow owner or super admin to manage their job posts
      allow read, write: if isOwner(employerId) || isSuperAdmin();
    }

    /**
     * @description Allows an employer to manage job applications. Admins have read access.
     */
    match /employers/{employerId}/jobPosts/{jobPostId}/applications/{applicationId} {
      function isJobSeekerOwner() {
          return isSignedIn() && request.auth.uid == request.resource.data.jobSeekerId;
      }
      // Employer or admin can read/manage applications.
      // Job seeker can create an application.
      allow get, list, update, delete: if isOwner(employerId) || isSuperAdmin();
      allow create: if isJobSeekerOwner();
    }


    /**
     * @description Public read for jobs. Write access is restricted to owners or admins.
     */
    match /jobPosts/{jobPostId} {
        allow read: if true;
        allow create: if (isSignedIn() && request.resource.data.employerId == request.auth.uid) || isSuperAdmin();
        allow update, delete: if (isSignedIn() && resource.data.employerId == request.auth.uid) || isSuperAdmin();
    }

    /**
     * @description Public read for blogs. Write access for admins.
     */
    match /blogs/{blogId} {
      allow read: if true;
      allow create, update, delete: if isSuperAdmin();
    }

    /**
     * @description Public read for reviews. Logged-in users or admins can create.
     */
    match /companyReviews/{companyReviewId} {
      allow read: if true;
      allow create: if isSignedIn() || isSuperAdmin();
      allow update, delete: if isSuperAdmin();
    }
  }
}
