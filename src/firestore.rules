rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Allow public read access to all documents.
      // This is a simplified rule to prevent permission errors during development.
      // For production, you should implement more granular rules.
      allow read: if true;

      // Allow write operations (create, update, delete) only for authenticated users.
      // This is a basic security measure.
      allow write: if request.auth != null;
    }
  }
}
